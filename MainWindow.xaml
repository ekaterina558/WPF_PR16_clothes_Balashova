<Window x:Class="WPF_PR16_clothes_Balashova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PR16_clothes_Balashova"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Canvas Background="#bae3e8">
                <Image Source="/Resources/512.ico" Height="96" Width="111"/>
            </Canvas>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Брюки и бриджы" Style="{StaticResource Title}"/>
            </StackPanel>
            <Frame x:Name="FrmMain" NavigationUIVisibility="Hidden" Grid.Row="1"/>

            <Grid Background="#bae3e8" Grid.Row="2"></Grid>
        </Grid>
    </Grid>
</Window>
